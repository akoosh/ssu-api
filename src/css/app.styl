
// Colors shamelessly stolen from SSU website
$color-main-theme = #1C4281
$color-light-accent = #C4D6F0
$color-medium-accent = #445B85
$color-dark-accent = #344356
$color-text-accent = #DDD
$color-light-neutral-accent = #DDD
$color-medium-neutral-accent = #AAA
$color-dark-neutral-accent = #888

html,
body,
#content,
.ApiClientApp {
    margin:             0;
    padding:            0;
    height:             100%;
}

.Sidebar {
    position:           fixed;
    top:                0;
    left:               0;
    bottom:             0;
    width:              260px;
    height:             100%;
    background:         $color-medium-accent;
    color:              $color-text-accent;
    padding:            20px;
    overflow:           auto;
}

.Content {
    margin-left:        300px;
    padding:            20px;
}

.DataTable {

    .table-controls {
        padding:            10px;
    }

    table, th, td {
        border:             1px solid black;
        padding:            10px 20px;
    }

    table {
        border-collapse:    collapse;
    }

    .sort-desc:after {
        content:            "▲";
    }

    .sort-asc:after {
        content:            "▼";
    }

    tr:nth-child(even) {
        background:         $color-light-neutral-accent;
    }

    tr:hover {
        background:         $color-light-accent;
    }

    .pagination {
        list-style:         none;
        margin:             10px;
        padding:            0px;
        display:            inline-block;

        li {
            padding:         5px 10px;
            display:        inline-block;
        }

        .selected {
            background:     $color-light-accent;
        }
    }
}
